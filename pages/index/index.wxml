      <view class="action">
        <text class="cuIcon-title text-red"></text>
        <text class="text-gray text-black text-bold">常见问题</text>
      </view>
    </view>
    <view class="cu-list menu sm-border">
      <view class="cu-item cu-item-custom arrow" bindtap="jumpQuestionPage">
        <view class="content">
