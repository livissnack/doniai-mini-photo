/* pages/ocr/plant.wxss */
/* 图片展示CSS */
.img{
  height: 450rpx;
  overflow: hidden;
  justify-content: center;
  align-items: center;
  background-color: #eeeeee;
  /* border-radius: 50%; */
}

.img image{
  display: block;
  height: 450rpx;
  width: 100%;
  /* border-radius: 50%; */
}

/* 识别结果CSS */
.result{
  /* padding: 25rpx; */
  display: flex;
  justify-content: space-between;
  background-color: #dfe4ea;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.2);
}

.result text{
  font-size: 35rpx;
  padding: 16rpx 40rpx;
}

.result .share{
  background-color: #9c88ff;
  border-radius: 18rpx;
  margin-right: 8rpx;
  margin-top: 4rpx;
}

/* 属性CSS */
.show{
  margin-bottom: 70rpx;
}

.title{
  display: flex;
  justify-content: space-between;
  font-size: 35rpx;
  padding: 20rpx 25rpx;
}

.title view{
  flex: 1;
}

.title view:nth-child(2){
  text-align: center;
}

.title view:nth-child(3){
  text-align: right;
}

.data{
  color: #0097e6;
}

.data:nth-child(2n){
  background-color: #f5f5f5;
}

/* 图片选择按钮CSS */
.btnImg{
  position: fixed;
  bottom: 5rpx;
  width: 100%;
}

.btnImg button{
  width: 94%;
  border-radius: 70rpx;
  background: linear-gradient(#a55eea,#4b7bec)
}

/* 百度百科内容 */
.introduce{
  position: fixed;
  top:0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0,0.7);
  color: white;
  font-size: 40rpx;
}

.introduceShow{
  font-size: 30rpx;
  word-break: keep-all;
  word-wrap: break-word;
  width: 600rpx;
  height: 600rpx;
  margin: 30% auto 0 auto;
  overflow-y: auto;
}

.cancel{
  width: 150rpx;
  height: 200rpx;
  border-radius: 50%;
  margin: 170rpx auto 0 auto;
}

.cancel image{
  width: 150rpx;
  height: 150rpx;
}

/* 没有识别到植物的展示 */
.noplant{
  text-align: center;
  font-size: 40rpx;
  margin-top: 40rpx;
}

.text-dec {
  text-decoration: underline;
}