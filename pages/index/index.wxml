<view hover-class="none" hover-stop-propagation="false">
  <cu-custom bgColor="bg-gradual-pink" isCustom="{{true}}">
    <view slot="content">智能证件照</view>
  </cu-custom>
  <view class="box">
    <swiper class="screen-swiper round-dot" indicator-dots="true" circular="true" autoplay="true" interval="5000" duration="500">
      <swiper-item wx:for="{{swiperList}}" wx:key="id">
        <image src="{{item.url}}" mode="aspectFill" wx:if="{{item.type=='image'}}"></image>
        <video src="{{item.url}}" autoplay loop muted show-play-btn="{{false}}" controls="{{false}}" objectFit="cover" wx:if="{{item.type=='video'}}"></video>
      </swiper-item>
    </swiper>
    <view class="cu-bar search bg-white padding-top">
      <view class="search-form round">
        <text class="cuIcon-search"></text>
        <input adjust-position="{{false}}" type="text" placeholder="搜索工具名称" confirm-type="search" />
      </view>
      <view class="action">
        <button class="cu-btn bg-green shadow-blur round">搜索</button>
      </view>
    </view>
    <view class="cu-bar bg-white solid-bottom">
      <view class="action">
        <text class="cuIcon-title text-red"></text>
        <text class="text-gray text-black text-bold">热门工具</text>
      </view>
    </view>
    <view class="cu-list grid col-3 no-border">
      <view class="cu-item" bindtap="jumpCropPage">
        <view class="cuIcon-cardboardfill text-red"></view>
        <text>拍照取字</text>
      </view>
      <view class="cu-item" bindtap="jumpTrsanlatePage">
        <view class="cuIcon-egefill text-pink">
          <image class="eggImg" src="../../images/translate.png"></image>
        </view>
        <text>文字翻译</text>
      </view>
      <view class="cu-item" bindtap="jumpOcrPlantPage">
        <view class="cuIcon-evaluate_fill text-green"></view>
        <text>植物识别</text>
      </view>
      <view class="cu-item" bindtap="jumpPhotoPage">
        <view class="cuIcon-picfill text-yellow"></view>
        <text>智能证件照</text>
      </view>
      <view class="cu-item" bindtap="jumpCalendarPage">
        <view class="cuIcon-calendar text-blue"></view>
        <text>万年历</text>
      </view>
      <view class="cu-item" bindtap="jumpQrcodePage">
        <view class="cuIcon-qrcode text-gray"></view>
        <text>二维码生成</text>
      </view>
      <view class="cu-item" bindtap="jumpFucaiPage">
        <view class="cuIcon-egefill text-pink">
          <image class="eggImg" src="../../images/fucai.png"></image>
        </view>
        <text>福彩工具</text>
